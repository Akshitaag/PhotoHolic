<h1 style="text-align: center;"><span style="margin-right: 15px">Hey Photoholic</span><em><%=u.user_name%></em></h1>

	<div style="margin-left: 20%; margin-right: 20%" class="row">
        <div class="col-md-9 col-sm-9"> <img style="width: 400px; height:400px; border-right: #999999 10px outset; border-bottom: #999999 4px outset; border-left: #000000 4px outset; border-top: #000000 4px outset; align-content: center; border-radius: 50%" src="<%= u.profile_pic%>"></div>
   
<div class="col-md-3 col-sm-3">
    <a class="ui purple basic button " style="color: purple" style="text-align: center;" href="/page/<%=u.user_id%>/newpagepost">What are you posting toady?</a>  
    <hr>
    <h3><%=pag.page_title%></h3>
    <h4><em>Our Purpose is </em><%=pag.purpose%></h4>
    <h3>Followed By : <%= cnt%></h3>
      <a class="ui blue basic button " style="color: blue" style="text-align: center;" href="/edit/<%=u.user_id%>">Edit Profile</a>
</div>

</div>
	<div>
     <hr>
    <hr>
    <h2 style="text-align: center"><strong>Photoholicism at its peak!</strong></h2>
    <hr>
    <hr>

    </div>
    
</div>
    <div class="ui main text container segment">
        <div class="ui top attached ">
                <div class="ui divided items">
                    <% p.forEach(function(p){%>
                    <div class="item thumbnail">
                         <div class="image ui medium rounded" style="margin-bottom: 25px; margin-top: 5%; width:200px height: 400px" ><img src="<%= p.image_url%>"  style=" width:300px ;height: 300px">
                         </div>
                           
                          <div class="caption" >
                         <div  style="width: 370px; margin-top:10%;border-style: solid; border-width: 1px; margin-bottom: 5%; border-radius: 5px; padding: 2% 2%; border-color: 1px solid black ">
                    <div  style="margin-bottom: 25px">
                     <div class="meta">
                  <span style="font-size: 20px"> <%= p.posted_at.toDateString() %> </span>
                    </div>
                    </div>
                    
                    </br></br>
                    <div style="margin-bottom: 25px"> 
           <div class="description" >
           
            <div style="margin: 5%;font-size: 15px; "><%=p.caption%> </div>
            <div style=" margin: 5%;font-size: 1.0em; color: blue"> <%=p.photo_tag_text%> </div>
        </div>  
        </div>
        </div>
        </div>
        </div>
        <%var hreff="/delete/page/"+u.user_id+"/"+p.photo_id;%>
        <a href="<%=hreff%>"><button>Delete Post</button></a>
                 
        <%});%>
                
        </div>
        </div>
