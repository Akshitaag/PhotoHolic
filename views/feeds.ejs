<!DOCTYPE html>
<html>
    <head>
        <title>PhotoHolic</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.10/semantic.min.css" >
         <link rel="stylesheet" href="style.css">
         <style type="text/css">
             .img{
                    margin: 0 auto;
                    width: 100%;
                    height:900px;
                    text-align: center;
                    display: inline-block;
                }
         </style>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
       
    </head>
    <body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">PhotoHolic</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                        <li><a href="/person/<%=id%>/">My Profile</a></li>
                        <li><a href="/person/<%=id%>/follows">Network</a></li>
                        <li><a href="/person/<%=id%>/feeds">Feeds</a></li>
                         <li><a href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="ui main text container segment">
        <div class="ui top attached ">
                <div class="ui divided items">
                    <% p.forEach(function(p){%>
                    <div class="item thumbnail">
                         <div  class="img img-responsive" ><img src="<%= p.image_url%>" >
                         </div>
                         <div class="caption">
                    <div  >
                     <div >
                  <span> <%= p.created_at.toDateString() %> </span>
                    <span> <%= p.likes %> </span>
                    </div>
                    </div> 
           <div class="description" style="margin-bottom: 25px">
            <div><%=p.caption%> </div>
            <div> <%=p.photo_tag_text%> </div>
            </div>
             <a href="/person/<%=p.photo_user_id%>/photos/<%=p.photo_id%>/comment/<%=id%>/new" class="btn btn-sm btn-success">Comment</a>
        <a href="/person/<%=p.photo_user_id%>/photos/<%=p.photo_id%>/like/<%=id%>/new" class="btn btn-sm btn-danger">Like</a>
        <% (p.comments).forEach(function(c){{%>
            <%if(c!= undefined){%>
            <div><div><%=c.comment_text%></div>
               <div> <%=c.comment_user_name%></div>
               <div><%=c.created_at.toDateString()%></div>
            </div>
        
          <%}}});%>
        </div> 
       
        </div>
                 
        <%});%>
                
            </div>
        </div>
        
        </div>
    <% include partials/footer %>